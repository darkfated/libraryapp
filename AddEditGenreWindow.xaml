<Window x:Class="libraryapp.AddEditGenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать жанр" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название:"/>
            <TextBox x:Name="NameTextBox" Margin="0,5"/>
            <TextBlock Text="Описание:"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,5" AcceptsReturn="True" Height="100"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Сохранить" Click="SaveButton_Click" Width="80" Margin="5"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
