<Window x:Class="libraryapp.AddEditAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать автора" Height="350" Width="400">
	<Grid Margin="10">
		<StackPanel>
			<TextBlock Text="Имя:"/>
			<TextBox x:Name="FirstNameTextBox" Margin="0,5"/>
			<TextBlock Text="Фамилия:"/>
			<TextBox x:Name="LastNameTextBox" Margin="0,5"/>
			<TextBlock Text="Дата рождения:"/>
			<DatePicker x:Name="BirthDatePicker" Margin="0,5"/>
			<TextBlock Text="Страна:"/>
			<TextBox x:Name="CountryTextBox" Margin="0,5"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
				<Button Content="Сохранить" Click="SaveButton_Click" Width="80" Margin="5"/>
				<Button Content="Отмена" Click="CancelButton_Click" Width="80" Margin="5"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
